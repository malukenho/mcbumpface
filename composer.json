{
    "name": "malukenho/mcbumpface",
    "description": "Sync the composer.lock and composer.json versions, resulting in faster package resolutions.",
    "license": "MIT",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Jefersson Nathan",
            "email": "malukenho@phpse.net"
        },
        {
            "name": "Gary Lockett",
            "email": "gary@creativecow.uk"
        }
    ],
    "require": {
        "php": "~8.0.0 || ~8.1.0",
        "composer-plugin-api": "^2.0.0"
    },
    "require-dev": {
        "ext-json": "*",
        "ext-zip": "*",
        "composer/composer": "^2.2.1",
        "laminas/laminas-coding-standard": "^2.3.0",
        "phpspec/prophecy-phpunit": "^2.0.1",
        "phpunit/phpunit": "^9.5.21",
        "psalm/plugin-phpunit": "^0.15.2",
        "vimeo/psalm": "^v4.15.0"
    },
    "conflict": {
        "symfony/process": "<4.4.30"
    },
    "autoload": {
        "psr-4": {
            "Malukenho\\McBumpface\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MalukenhoTest\\McBumpface\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "class": "Malukenho\\McBumpface\\Composer\\BumpPlugin"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "review": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
